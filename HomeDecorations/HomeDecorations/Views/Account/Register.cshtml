@model HomeDecorations.Models.ViewModels.RegisterViewModel
    
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta http-equiv="X-UA-Compatible" content="ie=edge">
            <link rel="apple-touch-icon" sizes="180x180" href="~/favicon/apple-touch-icon.png">
            <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">
            <link rel="icon" type="image/png" sizes="16x16" href="~/favicon/favicon-16x16.png">
            <link rel="manifest" href="favicon/site.webmanifest">
            <meta name="Description" content="HomeDecor | Original Interior Design" />
            <link rel="stylesheet"
                  href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta1/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
            <link rel="stylesheet" href="~/css/style.css">
            <title>HomeDecor</title>
        </head>
<h2 class="headings text-center mt-5"><u>Registration</u></h2>
<div class="container">
    <!-- Form -->
    <div class="row mb-4">
        <div class="col">
            <form method="post" asp-action="Register" asp-controller="Account" > @*Here we add the asp fontroler for form - success *@
                <div class="form-group mt-2">
                    <label asp-for="Name" for="exampleFormControlInput1">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleFormControlInput1" placeholder="Name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Email" for="exampleFormControlInput2">Email</label>
                    <input asp-for="Email" class="form-control" id="exampleFormControlInput2" placeholder="Email Address" required>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="form-group mt-2">
                    <label asp-for="Phone" for="exampleFormControlInput3">Phone</label>
                    <input asp-for="Phone" class="form-control" id="exampleFormControlInput3" placeholder="Mobile" required>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Password" for="exampleFormControlInput3">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleFormControlInput4" placeholder="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="ConfirmPassword" for="exampleFormControlInput3">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" id="exampleFormControlInput3" placeholder="Confirm Password" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="RoleName" for="exampleFormControlInput3">Role Name</label>
                    <select asp-for="RoleName" asp-items="@HomeDecorations.Utility.Helper.GetRolesForDropdown()" class="form-control" id="exampleFormControlInput3" placeholder="Select Your Role" required></select>
                </div>

                <div class="form-group mt-2">
                    <input type="checkbox" class="custom-control-input" id="customControlInline">
                    <label class="custom-control-label" for="customControlInline">I accept website terms</label>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-success">
                        Register
                    </button>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-secondary">
                        Log In
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
